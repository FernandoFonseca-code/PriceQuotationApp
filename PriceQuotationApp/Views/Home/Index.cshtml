@model PriceQuotationApp.Models.Calculations

@{
    ViewData["Title"] = "Price Quotation";
}

<h1 class="display-3 fw-bold text-primary">Price Quotation</h1>

<form asp-action="Index" method="post" class="form-horizontal">
    <div class="form-group row">
        <label asp-for="Subtotal" class="col-sm-2 col-form-label">Subtotal:</label>
        <div class="col-sm-10">
            <input asp-for="Subtotal" class="form-control" />
        </div>
        <div class="col-sm-10 offset-sm-2">
            <span asp-validation-for="Subtotal" class="text-danger"></span>
        </div>
	</div>

    <div class="form-group row">
        <label asp-for="DiscountPercent" class="col-sm-2 col-form-label">Discount Percent:</label>
        <div class="col-sm-10">
            <input asp-for="DiscountPercent" class="form-control" />
        </div>
        <div class="col-sm-10 offset-sm-2">
            <span asp-validation-for="DiscountPercent" class="text-danger"></span>
        </div>
    </div>
	<div class="form-group row">
		<label asp-for="DiscountAmount" class="col-sm-2 col-form-label">Discount Amount:</label>
		<div class="col-sm-10">
			<label class="form-control">@Model.DiscountAmount.ToString("C")</label>
		</div>
		<div class="col-sm-10 offset-sm-2">
			<span asp-validation-for="DiscountAmount" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="Total" class="col-sm-2 col-form-label">Tax Percent:</label>
		<div class="col-sm-10">
            <label class="form-control">@Model.Total.ToString("C")</label>
		</div>
		<div class="col-sm-10 offset-sm-2">
			<span asp-validation-for="Total" class="text-danger"></span>
		</div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <input type="submit" class="btn btn-primary" value="Calculate">
            <a asp-action="Reset" class="btn btn-danger">Clear</a>
        </div>
    </div>
</form>